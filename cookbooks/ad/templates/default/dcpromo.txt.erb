[DCINSTALL]
SafeModeAdminPassword=<%= @admin_password %>
RebootOnCompletion=Yes

<% if @type == "forest" -%>
ReplicaOrNewDomain=domain
NewDomain=forest
NewDomainDNSName=<%= @domain_name %>
DomainNetBiosName=<%= @netbios_name %>
SiteName=<%= @site_name %>
ForestLevel=3
DomainLevel=3
InstallDNS=yes

<% elsif @type == "child" -%>
NewDomain=child
ReplicaOrNewDomain=domain
ParentDomainDNSName=<%= @domain_name %>
ChildName=<%= @child_name %>
DomainNetBiosName=<%= @netbios_name %>
SiteName=<%= @site_name %>
DomainLevel=3
UserName=<%= @user_name %>
UserDomain=<%= @user_domain %>
Password=<%= @user_password %>
InstallDNS=yes
CreateDNSDelegation=yes
DNSDelegationUserName=<%= @dns_user_name %>
DNSDelegationPassword=<%= @dns_user_password %>

<% elsif @type == "replica" -%>
ReplicaOrNewDomain=replica
ReplicaDomainDNSName=<%= @domain_name %>
SiteName=<%= @site_name %>
ConfirmGC=yes 
UserName=<%= @user_name %>
UserDomain=<%= @user_domain %>
Password=<%= @user_password %>
InstallDNS=yes

<% end -%>

